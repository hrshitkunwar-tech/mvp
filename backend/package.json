{
  "name": "navigator-backend",
  "version": "1.0.0",
  "description": "Backend orchestration system for Navigator procedural intelligence platform",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:vision": "cd services && npm run dev",
    "dev:agents": "cd agents && npm run dev",
    "dev:convex": "cd convex && npx convex dev",
    "dev:n8n": "cd n8n-orchestrator && ./start-n8n.sh",
    "start": "npm-run-all --parallel start:*",
    "start:vision": "cd services && npm start",
    "start:agents": "cd agents && npm start",
    "start:n8n": "cd n8n-orchestrator && npm start",
    "setup": "./scripts/setup.sh",
    "setup:n8n": "cd n8n-orchestrator && npm install && cp .env.example .env",
    "import:workflows": "cd n8n-orchestrator && node scripts/import-workflows.js",
    "build": "npm-run-all build:*",
    "build:vision": "cd services && npm run build",
    "build:agents": "cd agents && npm run build",
    "build:tools": "cd tools && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:services": "./scripts/test-services.sh",
    "validate-procedure": "node scripts/validate-procedure.js",
    "deploy": "npm-run-all deploy:*",
    "deploy:convex": "cd convex && npx convex deploy",
    "deploy:vision": "cd services && npm run deploy",
    "deploy:agents": "cd agents && npm run deploy"
  },
  "keywords": [
    "procedural-intelligence",
    "orchestration",
    "vision-ai",
    "user-guidance",
    "n8n"
  ],
  "author": "Navigator Team",
  "license": "MIT",
  "dependencies": {
    "convex": "^1.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  },
  "workspaces": [
    "services",
    "agents",
    "tools",
    "convex",
    "n8n-orchestrator"
  ]
}
