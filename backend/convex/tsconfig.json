{
  "extends": "./.convex/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": ["./**/*.ts", ".convex/_generated/**/*.d.ts"],
  "exclude": ["node_modules"]
}
