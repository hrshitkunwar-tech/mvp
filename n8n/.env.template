# Navigator n8n Environment Configuration

# ============================================
# Convex Configuration
# ============================================
CONVEX_URL=https://abundant-porpoise-181.convex.cloud
CONVEX_DEPLOY_KEY=your_convex_deploy_key_here

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_org_id_here

# ============================================
# n8n Configuration
# ============================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_password

# ============================================
# Database Configuration
# ============================================
DB_TYPE=sqlite
DB_SQLITE_DATABASE=./n8n/database.sqlite

# ============================================
# Webhook Configuration
# ============================================
WEBHOOK_URL=http://localhost:5678/webhook
N8N_WEBHOOK_TUNNEL_URL=

# ============================================
# Execution Configuration
# ============================================
EXECUTIONS_PROCESS=main
EXECUTIONS_MODE=regular
EXECUTIONS_TIMEOUT=300
EXECUTIONS_TIMEOUT_MAX=3600

# ============================================
# Logging Configuration
# ============================================
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console,file
N8N_LOG_FILE_LOCATION=./n8n/logs/

# ============================================
# Security Configuration
# ============================================
N8N_ENCRYPTION_KEY=your_encryption_key_here

# ============================================
# Custom Configuration
# ============================================
NAVIGATOR_FRONTEND_URL=http://localhost:5173
NAVIGATOR_BACKEND_URL=https://abundant-porpoise-181.convex.cloud

# ============================================
# CORS & Extension Support
# ============================================
# Allow Chrome Extension to call webhooks
WEBHOOK_CORS_ORIGIN=*
# Optional: Allow invalid certs if using https locally
NODE_TLS_REJECT_UNAUTHORIZED=0

# ============================================
# Optional: Production Settings
# ============================================
# N8N_PROTOCOL=https
# N8N_HOST=your-domain.com
# N8N_PORT=443
# WEBHOOK_URL=https://your-domain.com/webhook
